// A launch configuration that launches the extension inside a new window;
// Use the IntelliSense to learn about the possible attributes;
// And hover to view descriptions of existing attributes;
// For more info, visit: https://code.visualstudio.com/docs/editor/debugging#_launch-configurations

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Theme",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "preLaunchTask": "npm: build",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--disable-extensions",
                "${file}"
            ]
        },
        {
            "name": "Launch Theme (with extensions)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "preLaunchTask": "npm: build",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}", "${file}"]
        }
    ]
}
